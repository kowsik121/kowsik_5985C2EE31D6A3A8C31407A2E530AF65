def factorial(n):
    # Base case: factorial of 0 and 1 is 1
    if n == 0 or n == 1:
        return 1
    # Recursive case: factorial of n is n times the factorial of (n-1)
    else:
        return n * factorial(n - 1)

# Example usage:
n = 5
result = factorial(n)
print(f"The factorial of {n} is {result}")
